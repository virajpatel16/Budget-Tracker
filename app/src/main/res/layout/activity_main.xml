<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="NotSibling">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="welcome back"
                android:textSize="16dp"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/back"
                android:text="viraj"
                android:textColor="@color/black"
                android:textSize="36dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:src="@drawable/download" />

            <androidx.cardview.widget.CardView
                android:id="@+id/plus"
                android:layout_width="50dp"
                android:layout_height="150dp"
                android:layout_below="@id/name"
                android:layout_marginTop="50dp"
                android:backgroundTint="#CAC7C7"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="140dp"
                    android:layout_margin="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/cross" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="300dp"
                android:layout_height="140dp"
                android:layout_below="@id/name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="55dp"
                android:layout_toRightOf="@id/plus"
                android:backgroundTint="#9A6DAE"
                app:cardCornerRadius="13dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VISA"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="$1000"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/cardno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:text="6772    8899    9911    53"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:text="card holder"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="25dp"
                    android:text="viraj"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="10dp"
                    android:text="expire"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="10dp"
                    android:text="08/26"
                    android:textColor="@color/white" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="total wallet"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck" />

            <androidx.cardview.widget.CardView
                android:id="@+id/total"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/wallet"
                app:cardCornerRadius="10dp">

                <EditText
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wallet"
                    android:hint="enter the total"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="show" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/income"
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:layout_below="@id/total"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#F4D1DF"
                app:cardCornerRadius="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="36dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|left"
                    android:backgroundTint="#9A6DAE"
                    app:cardCornerRadius="11dp">

                    <ImageButton
                        android:id="@+id/down"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:backgroundTint="#9A6DAE"
                        android:scaleType="centerCrop"

                        android:src="@drawable/green"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:text="Income" />

                <TextView
                    android:id="@+id/txtincome"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/excepse"
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:layout_below="@id/total"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/income"
                android:backgroundTint="#F4D1DF"
                app:cardCornerRadius="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="36dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="#9A6DAE"
                    app:cardCornerRadius="10dp">

                    <ImageButton
                        android:id="@+id/up"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:backgroundTint="#9A6DAE"
                        android:scaleType="centerCrop"
                        android:src="@drawable/red"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="excepnese" />

                <TextView
                    android:id="@+id/txtexpene"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="0dp"

                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/income"
                android:text="Recent transation"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/trance_show"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/excepse"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/next"
                tools:ignore="SpeakableTextPresentCheck" />
            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trance_show"
                android:hint="Enter Name"
                tools:ignore="TouchTargetSizeCheck" />


            <EditText
                android:id="@+id/edtincome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_below="@id/edtName"
                android:hint="enter income"/>
            <EditText
                android:id="@+id/edtexpense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtincome"
                android:inputType="number"
                android:hint="enter expence"/>

            <TextView
                android:id="@+id/viewall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/excepse"
                android:layout_alignParentRight="true"
                android:layout_marginTop="24dp"
                android:text="view all"
                android:textColor="#9A6DAE" />






            <androidx.cardview.widget.CardView
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtexpense"
                android:backgroundTint="#F4D1DF"
                app:cardCornerRadius="20dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/trancetion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>